# Environment variables for Speech Translation App
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=.onrender.com,localhost,127.0.0.1

# Database (Render will auto-populate DATABASE_URL)
DATABASE_URL=

# Redis (Render will auto-populate REDIS_URL)
REDIS_URL=

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# API Keys (Add your own)
WHISPER_API_KEY=
DEEPL_API_KEY=
HUGGINGFACE_API_KEY=
OPENAI_API_KEY=

# Translation Service (deepl, huggingface, or simple)
TRANSLATION_SERVICE=huggingface

# TTS Service
TTS_SERVICE=openai

# File Storage
MEDIA_ROOT=/opt/render/project/src/media
STATIC_ROOT=/opt/render/project/src/staticfiles

# Channels Layer
CHANNEL_LAYERS_BACKEND=channels_redis.core.RedisChannelLayer
CHANNEL_LAYERS_CONFIG_HOSTS=[("${REDIS_URL}")]

# CORS Settings (if needed for frontend)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com
